{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "/home/jwj//V2G/mqttclient_ES/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-Wall",
                "-static-libgcc",
                "-fexec-charset=GBK",
                "-std=c11",
                "-I${workspaceFolder}/inc",
                "-L/home/jwj//V2G/mqttclient_ES/lib",
                "-lpaho-mqtt3c",
                "-lpthread",
                "-lssl",
                "-lcrypto"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}